<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:padding="20dp"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="MENGHITUNG LUAS DAN KELILING PERSEGI PANJANG"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold" />



    <EditText
        android:id="@+id/Hasilkeliling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hasil Keliling"
        android:inputType="number"/>


    <EditText
        android:id="@+id/HasilLuas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hasil Luas"
        android:inputType="number"/>

    <TextView
        android:id="@+id/viewPanjang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="15dp"/>


    <TextView
        android:id="@+id/ViewLebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lebar"
        android:textSize="15dp"/>




</LinearLayout>